<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/add_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_device" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/add_device_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the device name"
        app:layout_constraintTop_toBottomOf="@+id/add_device_name" />

    <TextView
        android:id="@+id/add_device_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:text="@string/add_device_type"
        app:layout_constraintTop_toBottomOf="@+id/add_device_name_field" />

    <Spinner
        android:id="@+id/add_device_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintTop_toBottomOf="@+id/add_device_type" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/add_device_type_spinner">

        <Button
            android:id="@+id/cancel_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/add_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>