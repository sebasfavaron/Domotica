<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/add_device_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <TextView
                android:id="@+id/add_device_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/add_device"/>

            <android.support.design.widget.TextInputEditText
                android:id="@+id/add_device_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the device name" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/add_device_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_device_type"
            app:layout_constraintTop_toBottomOf="@+id/add_device_layout"/>

        <Spinner
            android:id="@+id/add_device_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/add_device_type">
        </Spinner>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/add_device_type_spinner"
        android:gravity="end">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>